<?xml version="1.0"?>
<!-- ====================================================================== 
     CacheBox Standalone Build (www.coldbox.org)                                                          
     ====================================================================== -->
<project name="cachebox-build" default="build" basedir="../">
	<description>
    	Build a new distribution of CacheBox Standalone
    </description>
	
	<!-- UPDATE ON EACH VERSION -->
	<property name="cachebox.version" value="2.0.0" />
	<property name="cachebox.slug"	 value="cachebox"/>

	<!-- Build Labels -->
	<tstamp prefix="start"/>
	<!-- Load Contrib Tasks -->
	<path id="cp">
		<fileset dir="build/lib">
			<include name="**/*.jar" />
		</fileset>
	</path>
	<!-- Define Tasks -->
	<taskdef resource="net/sf/antcontrib/antlib.xml" classpathref="cp" />
	
	<!-- Init -->
	<target name="init" description="Init">
		<!-- Default environment check, if not passed via -Denvironment -->
		<condition property="environment" value="local">
			<not><isset property="environment" /></not>
		</condition>
		<if>
			<available file="build/cachebox-${environment}.properties" />
			<then>
				<!-- Load env properties -->
				<echo>Loading properties from environment: ${environment}</echo>
				<loadproperties srcFile="build/cachebox-${environment}.properties"/>
			</then>
		</if>
		<!-- Load root properties -->
		<echo>Loading base properties</echo>
		<loadproperties srcFile="build/cachebox.properties"/>

		<!-- Build Number -->
		<propertyfile file="build/build.number" comment="Build Number for ANT. Edit not!">
			<entry key="build.number" 
					type="int" 
			     	operation="+"
					pattern="00000"
			     	default="1" />
		</propertyfile>
		<property file="build/build.number"/>
		<!-- Build Label -->
		<property name="build.label" value="testbox-${cachebox.version}.${build.number}-${start.DSTAMP}${start.TSTAMP}"/>
		<!-- Cleanup + Init -->
		<delete dir="${dir.build}" />
		<mkdir dir="${dir.build}/cachebox/apidocs"/>
		<chmod file="${dir.build}/**" perm="g+wxrs" type="both" />
		<!-- If stg, change perms and owners -->
		<if>
			<equals arg1="${environment}" arg2="auto" />
			<then>
				<chmod file="${dir.build}/**" perm="o+wrs" type="both" verbose="true" />
				<chown owner="stg-ortus" verbose="true">
					<fileset dir="${dir.build}" />
				</chown>
			</then>
		</if>
	</target>
	
	<!-- Build test reports -->
    <target name="run-tests">
        <subant target="run-junit">
          	<fileset dir="tests/automation" includes="test-cachebox.xml"/>
    		<property name="environment" value="${environment}" />
        </subant>
    </target>
	
	<!--build-->
	<target name="build" description="Build a new CacheBox distribution" depends="init,run-tests">
		
		<!-- Copy build ID -->
		<concat destfile="${dir.build}/cachebox/${build.label}">Built on ${start.TODAY}</concat>
		
		<!-- Copy src to cachebox namespace-->	
      	<copy todir="${dir.build}/cachebox/system/cache">
        	<fileset dir="system/cache" />
        </copy>
		<copy todir="${dir.build}/cachebox/system/core">
        	<fileset dir="system/core">
        		<exclude name="mail/*" />
        		<exclude name="db/*" />
        	</fileset>
        </copy>
		<copy todir="${dir.build}/cachebox/system/logging">
        	<fileset dir="system/logging" />
        </copy>
		
		<!--Copy text files to root folder-->
		<copy todir="${dir.build}/cachebox">
			<fileset file="license.txt" />
			<fileset file="system/cache/readme.txt" />						
		</copy>
		
		<!--Copy box.json to root -->
		<copy toFile="${dir.build}/box.json" file="box-cachebox.json" />

		<!-- Replace Build Numbers -->
		<replaceregexp match='@build.number@' replace="${build.number}" flags="ig" byline="true">
		  <fileset dir="${dir.build}">
		  </fileset>
		</replaceregexp>

		<!-- Refactor cachebox namespace -->
		<echo>Refactoring for coldbox absolute paths</echo>
		<replace dir="${dir.build}" value="/cachebox/system/" summary="yes">
		  	<include name="**/*.cfc" />
			<include name="**/*.cfm" />
			<include name="**/*.xml" />
			<include name="**/*.css" />
			<replacetoken>/coldbox/system/</replacetoken>
		</replace>
		<echo>Refactoring for coldbox instantitation and cfc paths</echo>
		<replace dir="${dir.build}" value="cachebox.system." summary="yes">
		  	<include name="**/*.cfc" />
			<include name="**/*.cfm" />
			<include name="**/*.xml" />
			<include name="**/*.css" />
			<replacetoken>coldbox.system.</replacetoken>
		</replace>
		
		<!-- Execute ColdDoc -->
		<get dest="${dir.build}/colddoc.html" src="${url.api}${cachebox.version}&amp;path=${dir.api}&amp;cachebox_root=${dir.build}/cachebox" verbose="true"/>
		<delete file="${dir.build}/colddoc.html" />
		
		<!-- Zip API Docs -->
		<zip destfile="${dir.exports}/cachebox_apidocs_${cachebox.version}.zip" basedir="${dir.build}/cachebox/apidocs"></zip>
		<!-- Zip Bundle -->
		<zip destfile="${dir.exports}/cachebox_${cachebox.version}.zip" basedir="${dir.build}"></zip>
		<!-- Build Checksum -->
		<checksum forceoverwrite="true" fileext=".md5">
			<fileset dir="${dir.exports}">
				<include name="*.zip" />
			</fileset>
		</checksum>

		<!-- Perms for automated builds -->
		<chmod file="${dir.build}/**" perm="g+wxrs" type="both" />
		<!-- Move BE to root -->
		<if>
			<equals arg1="${be.name}" arg2="" />
			<then></then>
			<else>
				<delete>
					<fileset dir="${be.exports}">
						<include name="${be.name}*" />
					</fileset>
				</delete>
				<copy file="${dir.exports}/cachebox_${cachebox.version}.zip" tofile="${be.exports}/${be.name}.zip" />
				<copy file="${dir.exports}/cachebox_${cachebox.version}.zip.md5" tofile="${be.exports}/${be.name}.zip.md5" />
			</else>
		</if>
		
		<!-- Cleanup -->
		<delete dir="${dir.build}" />
    </target>
</project>